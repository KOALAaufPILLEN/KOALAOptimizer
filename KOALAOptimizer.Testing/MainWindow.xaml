<Window x:Class="KOALAOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🐨 KOALA Gaming Optimizer V3 Ultimate" Height="900" Width="1400"
        Background="#0a0a0a" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#00ff00" Offset="0"/>
                    <GradientStop Color="#00aa00" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🐨" FontSize="40" Margin="10,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="KOALA GAMING OPTIMIZER V3 ULTIMATE" FontSize="24" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Text="by KOALAaufPILLEN | Maximum FPS Edition" FontSize="12" Foreground="#333"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="#0a0a0a" BorderThickness="0">
            <!-- System Optimization Tab -->
            <TabItem Header="🚀 OPTIMIZER">
                <ScrollViewer>
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <!-- System Info -->
                            <Border Background="#1a1a1a" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="SYSTEM INFORMATION" FontSize="16" FontWeight="Bold" Foreground="#00ff00" Margin="0,0,0,10"/>
                                    <TextBlock Name="SystemInfoText" Foreground="White" TextWrapping="Wrap"/>
                                    <TextBlock Name="AdminStatusText" Foreground="Yellow" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Optimization Mode -->
                            <Border Background="#1a1a1a" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="OPTIMIZATION MODE" FontSize="16" FontWeight="Bold" Foreground="#00ff00" Margin="0,0,0,10"/>
                                    <RadioButton Name="SafeModeRadio" IsChecked="True" Foreground="White" Margin="0,5">
                                        <StackPanel>
                                            <TextBlock Text="✅ SAFE MODE" FontWeight="Bold"/>
                                            <TextBlock Text="Anti-cheat compatible, no kernel modifications" FontSize="10" Foreground="#aaa"/>
                                        </StackPanel>
                                    </RadioButton>
                                    <RadioButton Name="PerformanceRadio" Foreground="White" Margin="0,5">
                                        <StackPanel>
                                            <TextBlock Text="⚡ PERFORMANCE MODE" FontWeight="Bold" Foreground="#ff9900"/>
                                            <TextBlock Text="Maximum FPS, may trigger anti-cheats" FontSize="10" Foreground="#ff6666"/>
                                        </StackPanel>
                                    </RadioButton>
                                    <RadioButton Name="KernelModeRadio" Foreground="White" Margin="0,5">
                                        <StackPanel>
                                            <TextBlock Text="🔥 KERNEL MODE" FontWeight="Bold" Foreground="#ff0000"/>
                                            <TextBlock Text="Extreme tweaks, USE AT OWN RISK!" FontSize="10" Foreground="#ff0000"/>
                                        </StackPanel>
                                    </RadioButton>
                                    <Button Name="OptimizeButton" Content="⚡ OPTIMIZE NOW" Background="#00ff00" Foreground="Black" FontWeight="Bold" Height="40" Margin="0,10,0,5" Click="OptimizeButton_Click"/>
                                    <Button Name="RestoreButton" Content="🔄 RESTORE BACKUP" Background="#ff3333" Foreground="White" FontWeight="Bold" Height="40" Click="RestoreButton_Click"/>
                                </StackPanel>
                            </Border>

                            <!-- Safe Options -->
                            <Border Background="#1a1a1a" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="SAFE OPTIMIZATIONS" FontSize="14" FontWeight="Bold" Foreground="#00ff00" Margin="0,0,0,10"/>
                                    <CheckBox Name="GpuCheckBox" Content="GPU Optimization" Foreground="White" IsChecked="True"/>
                                    <CheckBox Name="CpuCheckBox" Content="CPU Priority" Foreground="White" IsChecked="True"/>
                                    <CheckBox Name="RamCheckBox" Content="RAM Cleanup" Foreground="White" IsChecked="True"/>
                                    <CheckBox Name="NetworkCheckBox" Content="Network Tuning" Foreground="White" IsChecked="True"/>
                                    <CheckBox Name="VisualCheckBox" Content="Visual Effects" Foreground="White" IsChecked="True"/>
                                    <CheckBox Name="GameDvrCheckBox" Content="Disable Game DVR" Foreground="White" IsChecked="True"/>
                                    <CheckBox Name="MouseCheckBox" Content="Mouse Settings" Foreground="White" IsChecked="True"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <!-- Risky Options -->
                            <Border Background="#1a1a1a" BorderBrush="#ff6600" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="⚠ RISKY OPTIMIZATIONS" FontSize="14" FontWeight="Bold" Foreground="#ff9900" Margin="0,0,0,10"/>
                                    <CheckBox Name="ServicesCheckBox" Content="Disable Services" Foreground="#ffaa00"/>
                                    <CheckBox Name="TimerCheckBox" Content="Timer Resolution" Foreground="#ffaa00"/>
                                    <CheckBox Name="CoreParkingCheckBox" Content="Disable Core Parking" Foreground="#ffaa00"/>
                                    <CheckBox Name="CStatesCheckBox" Content="Disable C-States" Foreground="#ffaa00"/>
                                    <CheckBox Name="MitigationsCheckBox" Content="Disable CPU Mitigations" Foreground="#ff6666"/>
                                    <CheckBox Name="MSICheckBox" Content="Force MSI Mode" Foreground="#ffaa00"/>
                                    <CheckBox Name="InterruptCheckBox" Content="Interrupt Affinity" Foreground="#ffaa00"/>
                                </StackPanel>
                            </Border>

                            <!-- Kernel Options -->
                            <Border Background="#1a1a1a" BorderBrush="#ff0000" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="☠ KERNEL MODIFICATIONS" FontSize="14" FontWeight="Bold" Foreground="#ff0000" Margin="0,0,0,10"/>
                                    <TextBlock Text="WILL TRIGGER ANTI-CHEATS!" Foreground="#ff0000" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <CheckBox Name="BCDEditCheckBox" Content="BCDEdit Tweaks" Foreground="#ff6666" IsEnabled="False"/>
                                    <CheckBox Name="KernelDebugCheckBox" Content="Disable Kernel Security" Foreground="#ff6666" IsEnabled="False"/>
                                    <CheckBox Name="DriverSignCheckBox" Content="Disable Driver Signing" Foreground="#ff6666" IsEnabled="False"/>
                                    <CheckBox Name="TestModeCheckBox" Content="Enable Test Mode" Foreground="#ff6666" IsEnabled="False"/>
                                    <CheckBox Name="DEPCheckBox" Content="Disable DEP" Foreground="#ff6666" IsEnabled="False"/>
                                </StackPanel>
                            </Border>

                            <!-- Log -->
                            <Border Background="#1a1a1a" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="OPTIMIZATION LOG" FontSize="14" FontWeight="Bold" Foreground="#00ff00" Margin="0,0,0,10"/>
                                    <ScrollViewer Height="250">
                                        <TextBox Name="LogText" Background="#0a0a0a" Foreground="#00ff00" IsReadOnly="True" FontFamily="Consolas" TextWrapping="Wrap"/>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#00ff00">
            <TextBlock Name="StatusText" Text="Ready - KOALA V3 by KOALAaufPILLEN" Foreground="Black" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
