<Window x:Class="KOALAOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KOALA Gaming Optimizer V3" 
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d30" Padding="20">
            <StackPanel>
                <TextBlock Text="🐨 KOALA GAMING OPTIMIZER V3" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="#00ff00"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="by KOALAaufPILLEN" 
                          FontSize="12" 
                          Foreground="#888"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="System Status" 
                          Foreground="White" 
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>
                
                <Border Background="#2d2d30" 
                        CornerRadius="5" 
                        Padding="15"
                        Margin="0,0,0,20">
                    <TextBlock x:Name="SystemInfoText" 
                              Text="Loading system information..." 
                              Foreground="#888"/>
                </Border>
                
                <TextBlock Text="Optimization Options" 
                          Foreground="White" 
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,10">
                    <RadioButton x:Name="SafeModeRadio" 
                                Content="Safe Mode" 
                                Foreground="White"
                                IsChecked="True" 
                                Margin="0,0,20,0"/>
                    <RadioButton x:Name="PerformanceModeRadio" 
                                Content="Performance Mode" 
                                Foreground="White"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,20">
                    <Button x:Name="OptimizeButton" 
                           Content="🚀 OPTIMIZE" 
                           Width="150" Height="45" 
                           Margin="0,0,10,0"
                           Background="#00ff00"
                           Foreground="Black"
                           FontWeight="Bold"
                           FontSize="16"
                           Click="OptimizeButton_Click"/>
                    
                    <Button x:Name="RestoreButton" 
                           Content="🔄 RESTORE" 
                           Width="150" Height="45"
                           Background="#ff4444"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           Click="RestoreButton_Click"/>
                </StackPanel>
                
                <TextBlock x:Name="StatusText" 
                          Text="Ready to optimize" 
                          Foreground="#00ff00"
                          HorizontalAlignment="Center"
                          FontSize="14"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2d2d30" Padding="10">
            <TextBlock Text="© 2025 KOALAaufPILLEN - KOALA Gaming Optimizer V3" 
                      Foreground="#666"
                      HorizontalAlignment="Center"
                      FontSize="11"/>
        </Border>
    </Grid>
</Window>
