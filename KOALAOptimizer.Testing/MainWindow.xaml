<Window x:Class="KOALAOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KOALA Gaming Optimizer V3" Height="600" Width="900"
        Background="{DynamicResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SecondaryBackgroundBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="KOALA Gaming Optimizer V3" FontSize="24" FontWeight="Bold" 
                           Foreground="{DynamicResource AccentBrush}"/>
                <TextBlock Text="Created by KOALAaufPILLEN" FontSize="12" 
                           Foreground="{DynamicResource ForegroundBrush}" Opacity="0.7"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="Transparent">
            <TabItem Header="Optimization">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Mode Selection -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <RadioButton x:Name="SafeModeRadio" Content="Safe Mode (Recommended)" 
                                     IsChecked="True" Checked="SafeModeRadio_Checked"/>
                        <RadioButton x:Name="PerformanceModeRadio" Content="Performance Mode" 
                                     Margin="0,10,0,0" Checked="PerformanceModeRadio_Checked"/>
                    </StackPanel>
                    
                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button x:Name="OptimizeButton" Content="Optimize" Width="150" Height="35" 
                                Margin="5" Click="OptimizeButton_Click"/>
                        <Button x:Name="RestoreButton" Content="Restore" Width="150" Height="35" 
                                Margin="5" Click="RestoreButton_Click"/>
                    </StackPanel>
                    
                    <!-- Status -->
                    <TextBlock Grid.Row="2" Text="Ready" FontSize="14" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            
            <TabItem Header="Crosshair">
                <Grid Margin="20">
                    <StackPanel>
                        <CheckBox x:Name="CrosshairToggle" Content="Enable Crosshair" 
                                  Checked="CrosshairToggle_Checked" Unchecked="CrosshairToggle_Unchecked"/>
                        <ComboBox x:Name="CrosshairThemeComboBox" Margin="0,10,0,0"
                                  SelectionChanged="CrosshairThemeComboBox_SelectionChanged"/>
                        <Slider x:Name="CrosshairSizeSlider" Margin="0,10,0,0"
                                ValueChanged="CrosshairSizeSlider_ValueChanged"/>
                        <Slider x:Name="CrosshairOpacitySlider" Margin="0,10,0,0"
                                ValueChanged="CrosshairOpacitySlider_ValueChanged"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="FOV">
                <Grid Margin="20">
                    <StackPanel>
                        <CheckBox x:Name="FovToggle" Content="Enable FOV Indicator"
                                  Checked="FovToggle_Checked" Unchecked="FovToggle_Unchecked"/>
                        <ComboBox x:Name="FovStyleComboBox" Margin="0,10,0,0"
                                  SelectionChanged="FovStyleComboBox_SelectionChanged"/>
                        <Slider x:Name="FovRadiusSlider" Margin="0,10,0,0"
                                ValueChanged="FovRadiusSlider_ValueChanged"/>
                        <Slider x:Name="FovOpacitySlider" Margin="0,10,0,0"
                                ValueChanged="FovOpacitySlider_ValueChanged"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Settings">
                <Grid Margin="20">
                    <StackPanel>
                        <ComboBox x:Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Dark Theme" Tag="Dark" IsSelected="True"/>
                            <ComboBoxItem Content="Light Theme" Tag="Light"/>
                            <ComboBoxItem Content="Matrix Theme" Tag="Matrix"/>
                        </ComboBox>
                        <Button x:Name="ResetToDefaultsButton" Content="Reset to Defaults" 
                                Width="150" Height="35" Margin="0,20,0,0"
                                Click="ResetToDefaultsButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{DynamicResource SecondaryBackgroundBrush}">
            <StatusBarItem>
                <TextBlock Text="Version 3.0.0" Foreground="{DynamicResource ForegroundBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
