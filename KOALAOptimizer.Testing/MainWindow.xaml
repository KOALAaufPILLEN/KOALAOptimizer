<Window x:Class="KOALAOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KOALA Gaming Optimizer V3" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid Background="#1e1e1e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d30" Padding="20">
            <TextBlock Text="🐨 KOALA Gaming Optimizer V3" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#00ff00"/>
        </Border>
        
        <!-- Main Content -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            
            <TextBlock Text="Select Optimization Mode:" 
                       Foreground="White" 
                       Margin="0,0,0,10"/>
            
            <RadioButton x:Name="SafeModeRadio" 
                         Content="Safe Mode (Recommended)" 
                         Foreground="White"
                         IsChecked="True" 
                         Margin="0,5"/>
            
            <RadioButton x:Name="PerformanceModeRadio" 
                         Content="Performance Mode" 
                         Foreground="White"
                         Margin="0,5"/>
            
            <Button x:Name="OptimizeButton" 
                    Content="OPTIMIZE NOW" 
                    Width="200" Height="40" 
                    Margin="0,20,0,10"
                    Background="#00ff00"
                    Foreground="Black"
                    FontWeight="Bold"
                    Click="OptimizeButton_Click"/>
            
            <Button x:Name="RestoreButton" 
                    Content="RESTORE DEFAULTS" 
                    Width="200" Height="40"
                    Background="#ff4444"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="RestoreButton_Click"/>
            
            <TextBlock x:Name="StatusText" 
                       Text="Ready" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
        
        <!-- Footer -->
        <TextBlock Grid.Row="2" 
                   Text="Created by KOALAaufPILLEN - 2025" 
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="10"/>
    </Grid>
</Window>