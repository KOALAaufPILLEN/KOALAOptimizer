<UserControl x:Class="KOALAOptimizer.Testing.Views.CrosshairSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer Style="{DynamicResource ModernScrollViewerStyle}" Padding="10">
        <StackPanel>
            
            <!-- Enable/Disable Toggle -->
            <Expander Header="ðŸŽ¯ Crosshair Overlay" IsExpanded="True" 
                      Style="{DynamicResource GroupBoxStyle}" Margin="5">
                <StackPanel Margin="10">
                    
                    <!-- Main Toggle -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Enable Gaming Crosshair Overlay" 
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <CheckBox x:Name="chkEnableCrosshair" 
                                  Grid.Column="1"
                                  Style="{DynamicResource SciFiCheckBoxStyle}"
                                  Checked="EnableCrosshair_Checked"
                                  Unchecked="EnableCrosshair_Unchecked"/>
                    </Grid>
                    
                    <TextBlock Text="Display a customizable crosshair overlay on top of all windows and games" 
                               Margin="0,0,0,10"
                               Style="{DynamicResource DescriptionTextStyle}"/>
                    
                    <!-- Hotkey Info -->
                    <TextBlock Text="ðŸ”¥ Hotkey: Press F1 to toggle crosshair on/off" 
                               Margin="0,5"
                               FontWeight="Bold"
                               Foreground="{DynamicResource AccentBrush}"/>
                </StackPanel>
            </Expander>
            
            <!-- Live Preview -->
            <Expander Header="ðŸ‘ï¸ Live Preview" IsExpanded="True" 
                      Style="{DynamicResource GroupBoxStyle}" Margin="5">
                <StackPanel Margin="10">
                    <Border Background="{DynamicResource DarkBackgroundBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            Height="100" 
                            Margin="5">
                        <Canvas x:Name="PreviewCanvas" 
                                Background="Black" 
                                Width="100" 
                                Height="100">
                            <!-- Preview crosshair will be drawn here -->
                        </Canvas>
                    </Border>
                    <TextBlock Text="Live preview of your crosshair settings" 
                               HorizontalAlignment="Center"
                               Style="{DynamicResource DescriptionTextStyle}"/>
                </StackPanel>
            </Expander>
            
            <!-- Quick Theme Selection -->
            <Expander Header="ðŸŽ¨ Quick Themes" IsExpanded="True" 
                      Style="{DynamicResource GroupBoxStyle}" Margin="5">
                <StackPanel Margin="10">
                    <TextBlock Text="Select a predefined theme:" 
                               Margin="0,0,0,5"
                               Style="{DynamicResource FeatureTextStyle}"/>
                    
                    <!-- Theme Grid -->
                    <UniformGrid x:Name="ThemeGrid" 
                                 Columns="5" 
                                 Margin="5">
                        <!-- Theme buttons will be added dynamically -->
                    </UniformGrid>
                </StackPanel>
            </Expander>
            
            <!-- Style and Size -->
            <Expander Header="âš™ï¸ Style &amp; Size" IsExpanded="True" 
                      Style="{DynamicResource GroupBoxStyle}" Margin="5">
                <StackPanel Margin="10">
                    
                    <!-- Crosshair Style -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Style:" 
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <ComboBox x:Name="cmbCrosshairStyle" 
                                  Grid.Column="1"
                                  Style="{DynamicResource ModernComboBoxStyle}"
                                  SelectionChanged="CrosshairStyle_SelectionChanged"/>
                    </Grid>
                    
                    <!-- Size -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Size:" 
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <Slider x:Name="sliderSize" 
                                Grid.Column="1"
                                Minimum="5" Maximum="50" Value="20"
                                TickPlacement="BottomRight" TickFrequency="5"
                                Style="{DynamicResource ModernSliderStyle}"
                                ValueChanged="Size_ValueChanged"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding Value, ElementName=sliderSize, StringFormat={}{0:F0}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Style="{DynamicResource ValueTextStyle}"/>
                    </Grid>
                    
                    <!-- Thickness -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Thickness:" 
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <Slider x:Name="sliderThickness" 
                                Grid.Column="1"
                                Minimum="1" Maximum="10" Value="2"
                                TickPlacement="BottomRight" TickFrequency="1"
                                Style="{DynamicResource ModernSliderStyle}"
                                ValueChanged="Thickness_ValueChanged"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding Value, ElementName=sliderThickness, StringFormat={}{0:F0}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Style="{DynamicResource ValueTextStyle}"/>
                    </Grid>
                    
                </StackPanel>
            </Expander>
            
            <!-- Color Customization -->
            <Expander Header="ðŸŒˆ Color Customization" IsExpanded="False" 
                      Style="{DynamicResource GroupBoxStyle}" Margin="5">
                <StackPanel Margin="10">
                    
                    <!-- RGB Sliders -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Red:" 
                                   VerticalAlignment="Center"
                                   Foreground="Red"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <Slider x:Name="sliderRed" 
                                Grid.Column="1"
                                Minimum="0" Maximum="255" Value="0"
                                Style="{DynamicResource ModernSliderStyle}"
                                ValueChanged="Color_ValueChanged"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding Value, ElementName=sliderRed, StringFormat={}{0:F0}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Style="{DynamicResource ValueTextStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Green:" 
                                   VerticalAlignment="Center"
                                   Foreground="Green"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <Slider x:Name="sliderGreen" 
                                Grid.Column="1"
                                Minimum="0" Maximum="255" Value="255"
                                Style="{DynamicResource ModernSliderStyle}"
                                ValueChanged="Color_ValueChanged"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding Value, ElementName=sliderGreen, StringFormat={}{0:F0}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Style="{DynamicResource ValueTextStyle}"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Blue:" 
                                   VerticalAlignment="Center"
                                   Foreground="Blue"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <Slider x:Name="sliderBlue" 
                                Grid.Column="1"
                                Minimum="0" Maximum="255" Value="0"
                                Style="{DynamicResource ModernSliderStyle}"
                                ValueChanged="Color_ValueChanged"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding Value, ElementName=sliderBlue, StringFormat={}{0:F0}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Style="{DynamicResource ValueTextStyle}"/>
                    </Grid>
                    
                    <!-- Opacity -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Opacity:" 
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <Slider x:Name="sliderOpacity" 
                                Grid.Column="1"
                                Minimum="0.1" Maximum="1.0" Value="1.0"
                                Style="{DynamicResource ModernSliderStyle}"
                                ValueChanged="Opacity_ValueChanged"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding Value, ElementName=sliderOpacity, StringFormat={}{0:P0}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Style="{DynamicResource ValueTextStyle}"/>
                    </Grid>
                    
                    <!-- Hex Color -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Hex Color:" 
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource FeatureTextStyle}"/>
                        
                        <TextBox x:Name="txtHexColor" 
                                 Grid.Column="1"
                                 Text="#00FF00"
                                 Style="{DynamicResource ModernTextBoxStyle}"
                                 TextChanged="HexColor_TextChanged"/>
                        
                        <Button x:Name="btnColorPreview" 
                                Grid.Column="2"
                                Width="30" Height="20"
                                Background="Lime"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Margin="5,0,0,0"/>
                    </Grid>
                    
                </StackPanel>
            </Expander>
            
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10">
                
                <Button x:Name="btnResetToDefaults" 
                        Content="ðŸ”„ Reset to Defaults"
                        Style="{DynamicResource ModernButtonStyle}"
                        Margin="5"
                        Click="ResetToDefaults_Click"/>
                
                <Button x:Name="btnTestCrosshair" 
                        Content="ðŸŽ¯ Test Crosshair"
                        Style="{DynamicResource AccentButtonStyle}"
                        Margin="5"
                        Click="TestCrosshair_Click"/>
                
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
    
</UserControl>