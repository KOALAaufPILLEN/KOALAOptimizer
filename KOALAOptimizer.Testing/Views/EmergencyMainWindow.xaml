<Window x:Class="KOALAOptimizer.Testing.Views.EmergencyMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🐨 KOALA Gaming Optimizer v2.3 - Emergency Mode" 
        Width="1000" Height="750" 
        MinWidth="900" MinHeight="750"
        Background="DarkSlateGray"
        Foreground="White"
        WindowStartupLocation="CenterScreen">
    
    <!-- Ultra-minimal styling with no resource dependencies -->
    <Grid Background="DarkSlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="20,15,20,10" Background="DimGray">
            <TextBlock Text="🚀 KOALA Gaming Optimizer v2.3 - EMERGENCY MODE" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="Orange" Margin="0,0,0,4"/>
            <TextBlock Text="Application started in emergency mode due to styling errors. Limited functionality available." 
                       FontSize="14" FontStyle="Italic"
                       Foreground="LightGray"/>
        </StackPanel>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="DarkGray" Margin="10">
            <StackPanel Margin="20">
                
                <!-- Error Information -->
                <GroupBox Header="Error Information" Background="DimGray" BorderBrush="Red" 
                          Foreground="White" Margin="0,0,0,10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="⚠️ Theme Loading Error Detected" FontWeight="Bold" 
                                   Foreground="Yellow" Margin="0,0,0,5"/>
                        <TextBlock Text="• FrameworkElement.Style property exception occurred" 
                                   Margin="0,2" TextWrapping="Wrap"/>
                        <TextBlock Text="• Theme files may be corrupted or incompatible" 
                                   Margin="0,2" TextWrapping="Wrap"/>
                        <TextBlock Text="• Running with system default styling" 
                                   Margin="0,2" TextWrapping="Wrap"/>
                        <TextBlock Text="• Check emergency log for detailed diagnostics" 
                                   Margin="0,2" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Basic System Information -->
                <GroupBox Header="System Information" Background="DimGray" BorderBrush="Gray"
                          Foreground="White" Margin="0,0,0,10" Padding="10">
                    <StackPanel>
                        <TextBlock x:Name="SystemInfoText" Text="Loading system information..." 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Basic Controls -->
                <GroupBox Header="Available Actions" Background="DimGray" BorderBrush="Gray"
                          Foreground="White" Margin="0,0,0,10" Padding="10">
                    <StackPanel>
                        <Button x:Name="OpenEmergencyLogButton" Content="📄 Open Emergency Log"
                                Width="200" Height="35" Margin="5"
                                Background="DarkBlue" Foreground="White" 
                                BorderBrush="Blue" Click="OpenEmergencyLogButton_Click"/>
                        
                        <Button x:Name="RestartApplicationButton" Content="🔄 Restart Application"
                                Width="200" Height="35" Margin="5"
                                Background="DarkGreen" Foreground="White" 
                                BorderBrush="Green" Click="RestartApplicationButton_Click"/>
                        
                        <Button x:Name="ExitApplicationButton" Content="❌ Exit Application"
                                Width="200" Height="35" Margin="5"
                                Background="DarkRed" Foreground="White" 
                                BorderBrush="Red" Click="ExitApplicationButton_Click"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Basic Gaming Optimizations (Emergency Mode) -->
                <GroupBox Header="Emergency Gaming Optimizations" Background="DimGray" BorderBrush="Orange"
                          Foreground="White" Margin="0,0,0,10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="⚡ Limited optimizations available in emergency mode:" 
                                   FontWeight="Bold" Margin="0,0,0,5"/>
                        
                        <CheckBox x:Name="BasicOptimizationCheckBox" 
                                  Content="Enable basic gaming optimizations" 
                                  Foreground="White" Margin="0,5"
                                  Checked="BasicOptimizationCheckBox_Checked"/>
                        
                        <Button x:Name="ApplyEmergencyOptimizationsButton" 
                                Content="⚡ Apply Emergency Optimizations"
                                Width="250" Height="35" Margin="5"
                                Background="Purple" Foreground="White" 
                                BorderBrush="Violet" 
                                Click="ApplyEmergencyOptimizationsButton_Click"/>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <StackPanel Grid.Row="2" Background="Black" Orientation="Horizontal" Height="30">
            <TextBlock x:Name="StatusText" Text="Emergency Mode Active - Limited Functionality" 
                       Foreground="Orange" VerticalAlignment="Center" Margin="10,0"/>
            <TextBlock x:Name="TimeText" Text="" Foreground="White" 
                       VerticalAlignment="Center" Margin="20,0"/>
        </StackPanel>
        
    </Grid>
</Window>