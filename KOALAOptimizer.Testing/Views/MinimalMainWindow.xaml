<Window x:Class="KOALAOptimizer.Testing.Views.MinimalMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🐨 KOALA Gaming Optimizer v2.3 - Safe Mode" 
        Width="1000" Height="750" 
        MinWidth="900" MinHeight="750"
        Background="DarkSlateGray"
        Foreground="White"
        WindowStartupLocation="CenterScreen">
    
    <!-- NUCLEAR APPROACH: Zero dependencies - all hardcoded styling -->
    <Grid Background="DarkSlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="20,15,20,10" Background="DimGray">
            <TextBlock Text="🚀 KOALA Gaming Optimizer v2.3 - Safe Mode" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="LightBlue" Margin="0,0,0,4"/>
            <TextBlock Text="✅ Stable startup achieved! Enhanced with crosshair controls, optimization features, and safe theme loading." 
                       FontSize="14" FontStyle="Italic"
                       Foreground="LightGreen"/>
            
            <!-- Theme Loading Option -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="LoadThemesButton" Content="🎨 Load Themes" 
                        Width="200" Height="30" 
                        Background="DarkGreen" Foreground="White" BorderBrush="Green"
                        Click="LoadThemesButton_Click"/>
                <TextBlock Text="✨ Safe theme loading without restart" 
                           Foreground="LightGreen" VerticalAlignment="Center" Margin="10,0"/>
            </StackPanel>
            
            <!-- Status Indicator -->
            <TextBlock x:Name="txtApplicationStatus" 
                       Text="🛡️ Running in safe mode - all core features available" 
                       Margin="0,5,0,0" FontWeight="Bold"
                       Foreground="LightBlue"/>
        </StackPanel>
        
        <!-- Main Content -->
        <TabControl x:Name="MinimalTabControl" Grid.Row="1" Margin="10" Background="DarkGray">
            
            <!-- Basic Optimizations Tab -->
            <TabItem Header="🎮 Gaming Optimizations">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Background="DarkGray" Padding="10">
                    <StackPanel>
                        
                        <!-- Essential Gaming Optimizations -->
                        <GroupBox Header="🚀 Essential Gaming Optimizations" 
                                  Background="DimGray" BorderBrush="Gray" Foreground="White"
                                  Margin="5" Padding="10">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="chkDisableNagle" Content="Disable TCP ACK Delay (Nagle Algorithm)" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkSystemResponsiveness" Content="System Responsiveness (0)" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkDisableGameDVR" Content="Disable Game DVR" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkEnableGpuScheduling" Content="Enable GPU Hardware Scheduling" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkHighPrecisionTimer" Content="High Precision Timer" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkCpuCorePark" Content="CPU Core Parking Disable" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkMMCSS" Content="MMCSS Gaming Priority" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkAutoGameDetection" Content="Smart Game Detection" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkAudioLatency" Content="Audio Latency Reduction" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkInputLagReduction" Content="Input Lag Reduction" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkAdvancedMemory" Content="Advanced Memory Optimization" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                
                                <!-- Apply Buttons -->
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button x:Name="btnApplyOptimizations" Content="🚀 Apply Optimizations" 
                                            Width="150" Height="35" Margin="5,0"
                                            Background="DarkGreen" Foreground="White" BorderBrush="Green"
                                            Click="ApplyOptimizations_Click"/>
                                    <Button x:Name="btnResetOptimizations" Content="🔄 Reset to Default" 
                                            Width="130" Height="35" Margin="5,0"
                                            Background="DarkRed" Foreground="White" BorderBrush="Red"
                                            Click="ResetOptimizations_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Advanced Optimizations -->
                        <GroupBox Header="⚡ Advanced Gaming Features" 
                                  Background="DimGray" BorderBrush="Gray" Foreground="White"
                                  Margin="5" Padding="10">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="chkGamesTaskHighPriority" Content="Games Task: High Priority" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkNetworkLatency" Content="Network Latency Improvements" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkGameMode" Content="Windows Game Mode Enhancements" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkProcessOptimization" Content="Process Optimization Enhancements" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                <CheckBox x:Name="chkDisableNetworkThrottling" Content="Disable Network Throttling" 
                                          Foreground="White" Margin="2" IsChecked="True"/>
                                
                                <!-- Performance Monitoring -->
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                                    <Button x:Name="btnStartMonitoring" Content="📊 Start Performance Monitor" 
                                            Width="180" Height="30" Margin="5,0"
                                            Background="DarkBlue" Foreground="White" BorderBrush="Blue"
                                            Click="StartMonitoring_Click"/>
                                    <Button x:Name="btnStopMonitoring" Content="⏹️ Stop Monitor" 
                                            Width="120" Height="30" Margin="5,0"
                                            Background="DarkOrange" Foreground="White" BorderBrush="Orange"
                                            Click="StopMonitoring_Click"/>
                                </StackPanel>
                                
                                <TextBlock x:Name="txtPerformanceStatus" 
                                           Text="Performance monitoring stopped" 
                                           Foreground="LightGray" Margin="5,0,5,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Simple Crosshair Tab -->
            <TabItem Header="🎯 Crosshair (Basic)">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Background="DarkGray" Padding="10">
                    <StackPanel>
                        
                        <!-- Crosshair Control -->
                        <GroupBox Header="🎯 Gaming Crosshair Overlay" 
                                  Background="DimGray" BorderBrush="Gray" Foreground="White"
                                  Margin="5" Padding="10">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="chkEnableCrosshairMinimal" 
                                          Content="Enable Gaming Crosshair Overlay" 
                                          Foreground="White" Margin="5"
                                          Checked="EnableCrosshairMinimal_Checked"
                                          Unchecked="EnableCrosshairMinimal_Unchecked"/>
                                
                                <TextBlock Text="Display a customizable crosshair overlay on top of all windows and games" 
                                           Margin="5,5,5,10" Foreground="LightGray"/>
                                
                                <TextBlock Text="🔥 Hotkey: Press F1 to toggle crosshair on/off" 
                                           Margin="5" FontWeight="Bold" Foreground="Orange"/>
                                
                                <Button x:Name="btnTestCrosshairMinimal" 
                                        Content="🎯 Test Crosshair" 
                                        Width="150" Height="30" Margin="5"
                                        Background="DarkBlue" Foreground="White" BorderBrush="Blue"
                                        Click="TestCrosshairMinimal_Click"/>
                                
                                <TextBlock Text="Note: For full crosshair customization, enable themes and switch to the main interface." 
                                           Margin="5,10,5,5" Foreground="Yellow" FontStyle="Italic"/>
                            </StackPanel>
                        </GroupBox>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- System Info Tab -->
            <TabItem Header="💻 System Info">
                <Grid Margin="10">
                    <GroupBox Header="System Information" 
                              Background="DimGray" BorderBrush="Gray" Foreground="White"
                              Margin="5" Padding="10">
                        <ScrollViewer>
                            <TextBlock x:Name="SystemInfoTextBlock" 
                                       Text="Loading system information..." 
                                       FontFamily="Consolas, Courier New, monospace" 
                                       Foreground="White"
                                       Margin="10"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Footer / Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button x:Name="RecommendedButton" Content="🚀 Apply Recommended" 
                    Width="180" Height="40" Margin="5"
                    Background="DarkBlue" Foreground="White" BorderBrush="Blue"
                    FontSize="16" FontWeight="Bold"
                    Click="RecommendedButton_Click"/>
            <Button x:Name="RevertAllButton" Content="🔄 Revert All" 
                    Width="140" Height="40" Margin="5"
                    Background="DarkRed" Foreground="White" BorderBrush="Red"
                    Click="RevertAllButton_Click"/>
            <Button x:Name="SystemInfoButton" Content="💻 System Info" 
                    Width="140" Height="40" Margin="5"
                    Background="DarkGreen" Foreground="White" BorderBrush="Green"
                    Click="SystemInfoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>